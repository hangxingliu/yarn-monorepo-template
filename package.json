{
  "name": "@org/repo",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.7.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "start": "tsx",
    "build": "node ./scripts/swc-build-all.mjs",
    "lint": "yarn workspaces foreach -Ap run lint && yarn lint:eslint",
    "test": "yarn workspaces foreach -Ap run test",
    "lint:eslint": "eslint",
    "clean": "yarn workspaces foreach -Ap run clean",
    "removehook": "git config --unset core.hooksPath",
    "spellcheck": "cspell ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@swc/core": "^1.11.13",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "husky": "^9.1.7",
    "swc-cli-mux": "^0.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
