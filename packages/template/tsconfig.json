{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "./esm",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "incremental": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "esm",
    "cjs",
    "dist",
    "node_modules"
  ]
}
